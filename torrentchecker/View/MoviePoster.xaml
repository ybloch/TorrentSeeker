<Page x:Class="TorrentChecker.View.MoviePoster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TorrentChecker.View"
      mc:Ignorable="d" 
      Title="MoviePoster">

    <Grid>
        <Image x:Name="posterContainer"></Image>
        <Grid HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Width="25" Margin="0,0,0,17.422">
            <Button x:Name="closeButton" Click="closeButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" >
                <Button.Background>
                    <ImageBrush ImageSource="/TorrentChecker;component/images/DeleteBlack.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>
